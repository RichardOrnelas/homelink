[
  {
    "name": "homelink-worker",
    "image": "${image}",
    "cpu": ${cpu},
    "memory": ${mem},
    "memoryReservation": ${mem},
    "command": [
      "bundle",
      "exec",
      "shoryuken",
      "-R",
      "-C",
      "config/shoryuken.yml"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "homelink/${environment}/worker",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "worker"
      }
    },
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "${rails_env}"
      },
      {
        "name": "RAILS_LOG_TO_STDOUT",
        "value": "true"
      },
      {
        "name": "PORT",
        "value": "8080"
      },
      {
        "name": "DATABASE_URL",
        "value": "${database_url}"
      },
      {
        "name": "APP_BUCKET_NAME",
        "value": "${app_bucket_name}"
      },
      {
        "name": "DEFAULT_QUEUE",
        "value": "${default_queue}"
      }
    ]
  }
]
